<!-- HEADING -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2>Welcome <%- locals.accountData.account_firstname %> </h2>
<p><a class="management-link" href="account/update/<%=locals.accountData.account_id%>">Update Account Info</a></p>
<% if (locals.accountData.account_type == 'Employee' || locals.accountData.account_type == 'Admin') { %>
  <h2>Inventory Management</h2>
  <p><a class="management-link" href="/inv/">Go to Inventory Management</a></p>
<% } %>