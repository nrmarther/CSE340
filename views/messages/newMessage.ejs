<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="#" method="post">
    <h2>Send a New message</h2>
    <label for="message_to">To: </label>
    <input type="text" name="message_to" id="message_to" placeholder="Recipient" required ><br>
    <label for="message_subject">Subject:</label>
    <input type="text" name="message_subject" id="message_subject" placeholder="Message Subject"><br>
    <label for="message_body">Message Text:</label>
    <textarea name="message_body" id="message_body" cols="30" rows="10" placeholder="I hope you are doing well..."></textarea>
    <input type="submit" value="Send Message" id="submit-button">
</form>