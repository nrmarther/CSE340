<!-- HEADING -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- update form -->
<form action="/inv/delete/" method="post" id="deleteForm">
    <label for="inv_make">Make: </label>
    <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>" required readonly><br>
    <!-- inv_model -->
    <label for="inv_model">Model: </label>
    <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>" required readonly><br>
    <!-- inv_year -->
    <label for="inv_year">Year: </label>
    <input type="text" name="inv_year" id="inv_year" value="<%= locals.inv_year %>" required readonly><br>
    <!-- inv_price -->
    <label for="inv_price">Price: </label>
    <input type="number" name="inv_price" id="inv_price" value="<%= locals.inv_price %>" required readonly><br>
    <i>Confirm Deletion - The delete is permanent, Bozo</i><br>
    <input type="submit" value="Delete Vehicle" id="submit-button">

    <!-- hidden input for inventory Id  -->
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>